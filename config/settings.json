// 将设置放入此文件中以覆盖默认设置
{
    // editor
    "editor.fontSize": 13,
    "editor.tabSize": 2,
    // vim
    "vim.leader": ",",
    "vim.incsearch": true,
    "vim.useCtrlKeys": true,
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.hlsearch": true,
    "vim.useSystemClipboard": true,
    "vim.searchHighlightColor":"rgba(150, 150, 255, 1)",
    "vim.easymotion": true,
    "vim.handleKeys":{
        "<C-a>": false,
        "<C-h>": false
    },
    "vim.insertModeKeyBindings": [],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["z", "r"],
            "after": [],
            "commands": [
                {
                    "command": "editor.fold",
                    "args": []
                }
            ]
        },
        {
            "before": ["z", "t"],
            "after": [],
            "commands": [
                {
                    "command": "editor.unfold",
                    "args": []
                }
            ]
        },
        {
            "before": ["m", "m"],
            "after": [],
            "commands": [
                {
                    "command": "bookmarks.toggle",
                    "args": []
                }
            ]
        },
        {
            "before": ["m", "a"],
            "after": [],
            "commands": [
                {
                    "command": "bookmarks.listFromAllFiles",
                    "args": []
                }
            ]
        },
        {
            "before": ["m", "l"],
            "after": [],
            "commands": [
                {
                    "command": "bookmarks.list",
                    "args": []
                }
            ]
        },
        {
            "before": ["m", "f"],
            "after": [],
            "commands": [
                {
                    "command": "bookmarks.jumpToNext",
                    "args": []
                }
            ]
        },
        {
            "before": ["m", "b"],
            "after": [],
            "commands": [
                {
                    "command": "bookmarks.jumpToPrevious",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "w"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "q"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        {
            "before": ["leader", "g", "d"],
            "after": [],
            "commands": [
                {
                    "command": "git.openChange",
                    "args": []
                }
            ]
        }
    ],
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true,
        "**/deploy": true
    },
    "files.associations": {
        "*.wpy": "html",
        "*.wxml": "html",
        "*.wxss": "css"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "vue"
    ],
    "workbench.colorTheme": "Monokai Dimmed"
}